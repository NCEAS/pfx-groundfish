  file = {Schindler et al_2015_Frontiers in Ecology and the Environment_The portfolio concept in ecology and evolution.pdf:C\:\\Users\\rblake\\Documents\\WORK\\Papers\\Schindler et al_2015_Frontiers in Ecology and the Environment_The portfolio concept in ecology and evolution.pdf:application/pdf;Snapshot:C\:\\Users\\rblake\\AppData\\Roaming\\Mozilla\\Firefox\\Profiles\\jc7ah4ef.default\\zotero\\storage\\R7IR7RI9\\abstract.html:text/html},
