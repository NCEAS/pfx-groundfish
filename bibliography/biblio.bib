  file = {Gaichas et al_2011_Can. J. Fish. Aquat. Sci._What drives dynamics in the Gulf of Alaska.pdf:C\:\\Users\\rblake\\Documents\\WORK\\Papers\\Gaichas et al_2011_Can. J. Fish. Aquat. Sci._What drives dynamics in the Gulf of Alaska.pdf:application/pdf;NRC Research Press Snapshot:C\:\\Users\\rblake\\AppData\\Roaming\\Mozilla\\Firefox\\Profiles\\jc7ah4ef.default\\zotero\\storage\\ZG2KR9J6\\f2011-080.html:text/html},
