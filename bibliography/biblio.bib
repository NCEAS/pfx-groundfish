  author = {Chesson, Peter and Gebauer, Renate L. E. and Schwinning, Susan and Huntly, Nancy and Wiegand, Kerstin and Ernest, Morgan S. K. and Sher, Anna and Novoplansky, Ariel and Weltzin, Jake F.},
